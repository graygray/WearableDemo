    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_user_name"
        android:inputType="textCapWords"
        android:key="pref_userName"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_user_name" />
    
	<ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_user_gender"
        android:entryValues="@array/pref_user_gender_values"
        android:key="pref_userGender"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_user_gender" />
    
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_user_height"
        android:inputType="number"
        android:key="pref_userHeight"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_user_height" />
    
	<EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_user_weight"
        android:inputType="number"
        android:key="pref_userWeight"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_user_weight" />
	
	<EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_user_age"
        android:inputType="number"
        android:key="pref_userAge"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_user_age" />	

    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->
